{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false, 
    "esModuleInterop": true,
    "module": "esnext", 
    "moduleResolution": "bundler", 
    "resolveJsonModule": true,
    "baseUrl": ".", 
    "outDir": "./dist", 
    "rootDir": ".", 
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"], 
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx", "src/tests", "src/mocks", "migrate-sqlite-to-postgres.ts", "docker-migrate.sh"] 
}
